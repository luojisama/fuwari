---
import { siteConfig } from "@/config";
import Weather from "./Weather.svelte";

const { weather } = siteConfig;
const { enable } = weather;

interface Props {
	class?: string;
	style?: string;
}

const className = Astro.props.class;
const style = Astro.props.style;
---

{enable && (
    <Weather client:load class={className} style={style} />
)}
