---
import { siteConfig } from "@/config";
import I18nKey from "../../i18n/i18nKey";
import { i18n } from "../../i18n/translation";
import Weather from "./Weather.svelte";
import WidgetLayout from "./WidgetLayout.astro";

const { weather } = siteConfig;
const { enable, stationCode } = weather;

interface Props {
	class?: string;
	style?: string;
}

const className = Astro.props.class;
const style = Astro.props.style;
---

{enable && (
    <WidgetLayout name={i18n(I18nKey.weather)} id="weather-card" class={className} style={style}>
        <Weather client:load stationCode={stationCode} />
    </WidgetLayout>
)}
